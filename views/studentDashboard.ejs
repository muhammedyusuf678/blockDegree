<%- include ("./partials/header") %>
<!-- <h1>Current User: <%=currentUser%></h1>
<h1>Student: <%=student._id%></h1> -->

<div class="p-4 text-center darkPurple text-white">
    <div class="d-inline-block">
        <!-- <img src="/images/graduate-logo.png" alt="graduate logo"
            style="width: 150px; height:150px; float:center;" class="ml-3 mr-3"> -->
        <i class="fas fa-user-graduate fa-7x mr-3"></i>
    </div>
    <div class="d-inline-block h-100">
        <h1 class="display-5 d-inline-block vertical-middle"><%=student.name%>'s Dashboard</h1>

    </div>
</div>

<div class="container mt-4">
    <!-- <div class="row">
            <div class="col">
                <a href="#" class="btn btn-outline-info w-100 p-2"><i
                        class="fas fa-stamp mr-2"></i></i>Register with a University</a>
            </div>
        </div> -->
    <h1 class="display-5 text-center mt-3">All Degrees</h1>
    <table class="table table-hover mt-3">
        <thead class="bg-info text-white">
            <tr>
                <th scope="col">#</th>
                <th scope="col">University</th>
                <th scope="col">DegreeType</th>
                <th scope="col">Major</th>
                <th scope="col">CGPA</th>
                <th scope="col">IssueDate</th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            <% var i=1; %>
            <% student.degreesList.forEach(function(degree){ %>
            <tr class="accessRow">
                <th scope="row"><%= i %> </th>
                <td><%= degree.universityName %></td>
                <td><%= degree.degreeType %></td>
                <td><%= degree.major %></td>
                <td><%= degree.cgpa %></td>
                <td><%= degree.issueDate.toLocaleDateString("en-US") %></td>
                <td><a href="/degrees/<%=degree._id%>" class="btn btn-outline-info"><i
                            class="far fa-eye mr-2"></i>View</a></td>
                <td><a href="/degrees/<%=degree._id%>/share" class="btn btn-outline-info"><i
                            class="fas fa-share-alt mr-2"></i>Share</a></td>

            </tr>
            <% i++; }) %>
        </tbody>
    </table>

</div>
<%- include ("./partials/footer") %>