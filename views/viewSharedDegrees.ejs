<%- include ("./partials/header") %>

<div class="container mt-3">
    <div class="w-100 text-center">
        <a href="/<%=currentUser.userType.toLowerCase()%>/<%=currentUser.userObject%>" class="btn btn-outline-info"><i
                class="fas fa-arrow-circle-left mr-2"></i>Return to
            Dashboard</a>
    </div>
    <h1 class="display-5 text-center mt-3">All degrees shared with <%= university.universityName %></h1>
    <table class="table table-hover mt-3">
        <thead class="bg-info text-white">
            <tr>
                <th scope="col">#</th>
                <th scope="col">University</th>
                <th scope="col">Student</th>
                <th scope="col">DegreeType</th>
                <th scope="col">Major</th>
                <th scope="col">CGPA</th>
                <th scope="col">IssueDate</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% var i=1; %>
            <%if (university.sharesList.length == 0) {%>
            </tbody>
            </table>
                <p class="text-center text-muted">No Shared Degrees</p>
            <%}else {%>
            <% university.sharesList.forEach(function(degree){ %>
            <tr class="accessRow">
                <th scope="row"><%= i %> </th>
                <td><%= degree.universityName %></td>
                <td><%= degree.studentName %></td>
                <td><%= degree.degreeType %></td>
                <td><%= degree.major %></td>
                <td><%= degree.cgpa %></td>
                <td><%= degree.issueDate.toLocaleDateString("en-US") %></td>
                <td><a href="/degrees/<%=degree._id%>" class="btn btn-outline-info">View Degree</a></td>
            </tr>
            <% i++; }) %>
        </tbody>
    </table>
    <%}%>
</div>
<%- include ("./partials/footer") %>