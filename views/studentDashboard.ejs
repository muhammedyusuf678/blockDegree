<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlockDegree</title>
    <link rel="stylesheet" href="/css/bootstrap-4.4.1.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/font-awesome/css/all.css">

</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">BlockDegree</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Dashboard <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Help</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item ">
                    <a class="nav-link" href="#">Log Out</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="p-4 text-center darkPurple text-white">
        <div class="d-inline-block">
            <!-- <img src="/images/graduate-logo.png" alt="graduate logo"
            style="width: 150px; height:150px; float:center;" class="ml-3 mr-3"> -->
            <i class="fas fa-user-graduate fa-7x mr-3"></i>
        </div>
        <div class="d-inline-block h-100">
            <h1 class="display-5 d-inline-block vertical-middle"><%=student.name%>'s Dashboard</h1>

        </div>
    </div>

    <div class="container mt-4">
        <!-- <div class="row">
            <div class="col">
                <a href="#" class="btn btn-outline-info w-100 p-2"><i
                        class="fas fa-stamp mr-2"></i></i>Register with a University</a>
            </div>
        </div> -->
        <h1 class="display-5 text-center mt-3">All Degrees</h1>
        <table class="table table-hover mt-3">
            <thead class="bg-info text-white">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">University</th>
                    <th scope="col">DegreeType</th>
                    <th scope="col">Major</th>
                    <th scope="col">CGPA</th>
                    <th scope="col">IssueDate</th>
                    <th></th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                <% var i=1; %>
                <% student.degreesList.forEach(function(degree){ %>
                <tr class="accessRow">
                    <th scope="row"><%= i %> </th>
                    <td><%= degree.universityName %></td>
                    <td><%= degree.degreeType %></td>
                    <td><%= degree.major %></td>
                    <td><%= degree.cgpa %></td>
                    <td><%= degree.issueDate.toLocaleDateString("en-US") %></td>
                    <td><a href="/degrees/<%=degree._id%>" class="btn btn-outline-info"><i class="far fa-eye mr-2"></i>View</a></td>
                    <td><a href="/degrees/<%=degree._id%>/share" class="btn btn-outline-info"><i class="fas fa-share-alt mr-2"></i>Share</a></td>

                </tr>
                <% i++; }) %>
            </tbody>
        </table>

    </div>

    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/popper-1.16.0.min.js"></script>
    <script src="/js/bootstrap-4.4.1.min.js"></script>

    <script src="/js/universityDashboardFunctions.js"></script>
</body>

</html>