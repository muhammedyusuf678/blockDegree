<%- include ("./partials/header") %>
    <link rel="stylesheet" href="/css/reg-login.css">
    <div class="main">
        <section class="signup">
            <div class="container">
                <div class="signup-content mt-5">
                    <form method="POST" id="login" class="signup-form" action="/login">
                        <h2 class="form-title">Login</h2>
                        <div class="form-group">
                            <input type="email" class="form-input" name="username" id="username" placeholder="BlockDegree Email" required/>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-input" name="password" id="password" placeholder="Password" required/>
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" id="submit" class="form-submit" value="Login"/>
                        </div>
                    </form>
                    <p class="loginhere">
                        Don't have an account ? <a href="/register" class="loginhere-link">Sign up here</a>
                    </p>
                </div>
            </div>
        </section>
    </div>

    <script src="/js/reg-login.js"></script>
