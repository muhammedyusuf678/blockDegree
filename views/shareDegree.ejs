<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlockDegree</title>
    <link rel="stylesheet" href="/css/bootstrap-4.4.1.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/font-awesome/css/all.css">

</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">BlockDegree</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Dashboard <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Help</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item ">
                    <a class="nav-link" href="#">Log Out</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="h-100 text-center">
            <a href="" class="btn btn-outline-info"><i class="fas fa-arrow-circle-left mr-2"></i>Return to
                Dashboard</a>
        </div>
        <h1 class="display-heading-4 text-center mt-4">Share your<br>
            <span class="text-muted"><%=degree.degreeType %> in <%=degree.major%></span>
            <br>Degree
        </h1>


        <form class="mt-4 form-inline" action="/degrees/<%=degree._id%>/share" method="POST">
            <label for="blockDegreeEmail">BlockDegree Email: </label>
            <div class="w-75 ml-3 mr-3">
                <input type="email" class="form-control w-100" name="blockDegreeEmail" id="blockDegreeEmail"
                    placeholder="recruiter@company.com">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-outline-success"><i
                        class="fas fa-share-alt mr-2"></i>Share</button>
            </div>
        </form>

        <hr style="border-top:5px solid rgba(0,0,0,.1)" class="mt-4">

        <h1 class="mt-4 display-heading-4 text-center">Who has access</h1>
        <table class="table table-hover mt-4">
            <thead class="bg-info text-white">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Employer Name</th>
                    <th scope="col">Company Name</th>
                    <th scope="col">BlockDegree Email</th>
                    <th scope="col">Contact Number</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                <% var i=1; %>
                <% sharesList.forEach(function(share){ %>
                <tr class="accessRow">
                    <th scope="row"><%= i %> </th>
                    <td><%=share.employer.employerName%></td>
                    <td><%=share.employer.companyName%></td>
                    <td><%=share.employer.blockDegreeEmail%></td>
                    <td><%=share.employer.contactNumber%></td>
                    <td><a href="/degrees/<%=degree._id%>/revoke/<%=share.employer._id%>"
                            class="btn btn-outline-danger p-2"><i class="fas fa-minus-circle mr-2"></i>Unshare</a></td>
                </tr>
                <% i++; }) %>
            </tbody>
        </table>
    </div>

    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/popper-1.16.0.min.js"></script>
    <script src="/js/bootstrap-4.4.1.min.js"></script>

    <script src="/js/universityDashboardFunctions.js"></script>
</body>

</html>