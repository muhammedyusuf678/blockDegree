<%- include ("./partials/header") %>

<div class="container mt-3">
    <div class="w-100 text-center">
        <a href="/<%=currentUser.userType.toLowerCase()%>/<%=currentUser.userObject%>" class="btn btn-outline-info"><i class="fas fa-arrow-circle-left mr-2"></i>Return to
            Dashboard</a>
    </div>
    <h3 class="mt-3 text-center">All Issued Degrees</h3>
</div>
<div class="container" style="max-width: 1300px;">
    <table class="table table-hover mt-3" id="myDataTable">
        <thead class="bg-info text-white">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Student</th>
                <th scope="col">University Email</th>
                <th scope="col">DegreeType</th>
                <th scope="col">Major</th>
                <th scope="col">CGPA</th>
                <th scope="col">IssueDate</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            <% var i=1; %>
            <% university.issuedDegrees.forEach(function(degree){ %>
            <tr class="accessRow">
                <th scope="row"><%= i %> </th>
                <td><%= degree.studentName %></td>
                <td><%= degree.studentUniversityEmail %></td>
                <td><%= degree.degreeType %></td>
                <td><%= degree.major %></td>
                <td><%= degree.cgpa %></td>
                <td><%= degree.issueDate.toLocaleDateString("en-US") %></td>
                <td><a href="/degrees/<%=degree._id%>" class="btn btn-outline-info"><i
                    class="far fa-eye mr-2"></i>View</a></td>
            </tr>
            <% i++; }) %>
        </tbody>
    </table>
</div>

<%- include ("./partials/footer") %>

